@model App.Data.Entities.Resource_Magazine;
@{
    ViewData["Title"] = "MagazineDetail";
    //Layout = null;
    Layout = "~/Views/Shared/_LayoutPageChildDocument.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<style>

    .display-audio {
        position: fixed;
        top: 18%;
        right: 2%;
    }

    .audio-menu {
        position: fixed;
        top: 30%;
        right: 2%;
    }

    .empty-menu {
        height: 75px;
        background-color: #092971eb;
    }

    .viewer-pdf {
        width: 100%;
        height: 800px;
    }

    #playlist {
        background: #f1f3f4;
        opacity: 0.9;
        color: #212529;
        border-radius: 3px;
    }

    #btn-showAudio {
        position: fixed;
        top: 19%;
        z-index: 1;
        right: 1.5%;
        width: 40px;
        height: 40px;
    }

    .audio-list {
        margin-top: 2px;
    }

    .audio-item :hover {
        background: azure;
    }

    .audio-name {
        width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        color: #002aca;
    }

    .audio-item {
        margin-bottom: -30px;
    }

    #header {
        position: absolute !important;
    }

    .audio-list {
        height: 300px;
        overflow-y: scroll;
    }
</style>

<div class="empty-menu">

</div>
<div class="viewer-container">
    <div>
        <!--Audio-->

        <div class="display-audio">
            <div class="btn-show row">
                <div class="col-md-8"></div>
                <div class="col-md-2">
                    <img id="btn-showAudio" src="~/images/main-page/play.png" />
                </div>
            </div>
            <div class="wrap-audio">
                <div class="audio-active row">
                    <audio id="audio" preload="auto" tabindex="0" controls="" type="audio/mpeg">
                        <source type="audio/mp3" src="~/file-upload/audio/magazine/@ViewBag.AudioFirst">
                        Sorry, your browser does not support HTML5 audio.
                    </audio>
                </div>
                <div class="audio-list">
                    <ol id="playlist">
                        @foreach (var audio in Model.Audios.OrderBy(n => n.Order))
                        {
                            <li class="audio-item">
                                <a href="~/file-upload/audio/magazine/@audio.AudioUrl" title="@audio.AudioName">
                                    <p class="audio-name">@audio.AudioName</p>
                                </a>
                            </li>
                        }
                    </ol>
                </div>
            </div>
        </div>

    </div>


    @*<h3>THÔNG TIN CHI TIẾT</h3>*@
    <iframe src="@Url.Action("DisplayPDF","ResourceMagazine", new { pdfUrl = "/file-upload/magazine/" + Model.MagazineUrl})" class="viewer-pdf">
        <p>Your browser does not support iframes.</p>
    </iframe>
</div>


<script>
    debugger
    let isShow = true;
    $('.wrap-audio').hide();
    $('#btn-showAudio').on('click', function () {
        if (isShow) {
            $('.wrap-audio').show();
            isShow = false;
        } else {
            $('.wrap-audio').hide();
            isShow = true;
        }
    });

    var audio;
    var playlist;
    var tracks;
    var current;

    init();
    function init() {
        current = 0;
        audio = $('audio');
        playlist = $('#playlist');
        tracks = playlist.find('li a');
        len = tracks.length - 1;
        //audio[0].volume = .10;
        //audio[0].play();
        playlist.find('a').click(function (e) {
            e.preventDefault();
            link = $(this);
            current = link.parent().index();
            run(link, audio[0]);
        });
        audio[0].addEventListener('ended', function (e) {
            current++;
            if (current == len) {
                current = 0;
                link = playlist.find('a')[0];
            } else {
                link = playlist.find('a')[current];
            }
            run($(link), audio[0]);
        });
    }
    function run(link, player) {
        player.src = link.attr('href');
        par = link.parent();
        par.addClass('active').siblings().removeClass('active');
        audio[0].load();
        audio[0].play();
    }
</script>
